{% extends 'base.html.twig'%}
{% block title %}Alarms{%endblock %}
{% block name %}Alarms{%endblock %}

{% block body %}
<div class="container">
	<div class="row span12">
		<div class="span2">
			<h4>Name</h4>
		</div>
		<div class="span2">
			<h4>Device</h4>
		</div>
		<div class="span4">
			<h4>Description</h4>
		</div>
		<div class="span1">
			<h4>Active</h4>
		</div>
		<div class="span1">
			<h4>Enabled</h4>
		</div>
	</div>
{% for alarm in alarms %}
	<div class="row span12">
		<div class="span2">
			{{alarm.alarmname}}
		</div>
		<div class="span2">
			{{alarm.devicename}}
		</div>
		<div class="span4">
			{{alarm.description}}
		</div>
		<div class="span1">
			{% if alarm.active %}Yes{%else%}No{%endif%}
		</div>
		<div class="span1">
			{% if alarm.enabled %}Yes{%else%}No{%endif%}
		</div>
	</div>
{% else %}
	<div class="row span12">
		<p>No devices or alarms found</p>
	</div>
{% endfor %}
</div>
{% endblock %}