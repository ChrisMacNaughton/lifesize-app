{% extends 'base.html.twig'%}
{% block title %}Alarms{%endblock %}
{% block name %}Alarms{%endblock %}

{% block body %}
<div class="container">
	<div class="row span12">
		<div class="span2">
			<h4>Name</h4>
		</div>
		<div class="span2">
			<h4>Device</h4>
		</div>
		<div class="span5">
			<h4>Description</h4>
		</div>
		<div class="span1">
			<h4>Active</h4>
		</div>
		<div class="span1">
			<h4>Enabled</h4>
		</div>
	</div>
	<form action="" method="post">
		<input type="hidden" name="action" value="update" />
{% for alarm in alarms %}
	<div class="row span12">
		<div class="span2">
			{{alarm.alarmname}}
		</div>
		<div class="span2">
			{{alarm.devicename}}
		</div>
		<div class="span5">
			{{alarm.description}}
		</div>
		<div class="span1">
			{% if alarm.active %}Yes{%else%}No{%endif%}
		</div>
		<div class="span1">
			<input type="hidden" name="{{alarm.id}}|{{alarm.deviceid}}" value="off" />
			<input type="checkbox" name="{{alarm.id}}|{{alarm.deviceid}}" {% if alarm.enabled %}checked="checked" {%endif%}/>
		</div>
	</div>
{% else %}
	<div class="row span12">
		<p>No devices or alarms found</p>
	</div>
{% endfor %}
{% if alarms != null%}
	<div class="span1 offset 8">
		<input type="submit" value="Update Alarms" />
	</div>
{% endif %}
</form>
</div>

{% endblock %}