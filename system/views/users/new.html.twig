{% extends 'base.html.twig' %}
{% block body %}
<div class="span8">
<form action="#" method="post" class="well">

<label>Name</label><input type="text" name="name" placeholder="name" />
<label>E-Mail</label><input type="text" name="email" placeholder="email" />
<label>Password</label><input type="password" name="password" autofill="false" placeholder="password" />
<label>Verify</label><input type="password" name="password2" placeholder="verify" />
<label>User Type
<select name="level">
	<option value="0">User</option>
	<option value="1">Engineer</option>
	<option value="2">Manager</option>
	{% if user.level >= 3 %}
	<option value="3">Administrator</option>
	{% endif %}
</select>
</label>
<input type="hidden" name="action" value="new" />
<input type="submit" value="Submit">
</div>
{% endblock %}